{
  "compilerOptions": {
    "outDir": "./dist/",
    "moduleResolution":"node", // using this lets us have rootDirs resolve stuff like moment with "./moment"
    "rootDirs": ["node_modules","./", "node_modules/@types"],
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true
  }
}